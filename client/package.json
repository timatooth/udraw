{
  "name": "udraw-client",
  "version": "2.0.0",
  "description": "Frontend for udraw infinite drawing canvas",
  "main": "src/index.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "build": "esbuild --bundle src/index.jsx --outdir=out --sourcemap --bundle --loader:.png=file --target=chrome58",
    "watch": "esbuild --bundle src/index.jsx --outdir=out --sourcemap --bundle --loader:.png=file --target=chrome58 --watch",
    "serve": "esbuild --bundle src/index.jsx --outdir=out --sourcemap --bundle --loader:.png=file --format=esm --watch --servedir=out",
    "start": "webpack serve"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/timatooth/udraw.git"
  },
  "author": "Tim Sullivan",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/timatooth/udraw/issues"
  },
  "homepage": "https://github.com/timatooth/udraw#readme",
  "devDependencies": {
    "esbuild": "0.25.0"
  },
  "dependencies": {
    "peerjs": "^1.5.4",
    "pixi.js": "^8.3.3",
    "react": "^18.3.1",
    "react-dom": "^18.3.1"
  }
}
